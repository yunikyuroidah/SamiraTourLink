{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",         // penting untuk React 17+ (JSX runtime)
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,            // sementara bisa dimatikan, lebih baik aktifkan nanti
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "react", "react-dom"]
  },
  "include": ["src"]
}